/* pages/jurisdiction/jurisdiction.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  padding: 30rpx 20rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* Tab切换 */
.tab-container {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: white;
  font-weight: bold;
}

/* Tab内容 */
.tab-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.info-header {
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.rule-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.rule-item:last-child {
  border-bottom: none;
}

.rule-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.rule-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

/* 提示卡片 */
.tips-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.tips-header {
  margin-bottom: 20rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  padding-left: 20rpx;
  position: relative;
}

.tips-text::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 6rpx;
  height: 6rpx;
  background: #4A90E2;
  border-radius: 50%;
}

/* 标准卡片 */
.standard-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.standard-header {
  margin-bottom: 20rpx;
}

.standard-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.standard-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.province-list {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.province-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.province-item:last-child {
  border-bottom: none;
}

.province-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.province-amount {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: bold;
}

.amount-big {
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
  text-align: center;
  padding: 30rpx 0;
}

.amount-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: -10rpx;
}

/* 法律依据卡片 */
.law-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.law-header {
  margin-bottom: 20rpx;
}

.law-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.law-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.law-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.law-divider {
  height: 1rpx;
  background: #e8ecef;
  margin: 8rpx 0;
}

/* 特殊管辖卡片 */
.special-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.special-header {
  margin-bottom: 20rpx;
}

.special-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.special-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.special-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  padding-left: 20rpx;
  position: relative;
}

.special-text::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 6rpx;
  height: 6rpx;
  background: #ff6b6b;
  border-radius: 50%;
}

/* 免责声明 */
.disclaimer {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(238, 90, 111, 0.1) 100%);
  border-radius: 12rpx;
  border: 1rpx solid #ff6b6b;
}

.disclaimer-text {
  font-size: 22rpx;
  color: #ee5a6f;
  line-height: 1.6;
  text-align: center;
}
