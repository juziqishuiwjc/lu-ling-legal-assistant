/* pages/retire-age/retire-age.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  padding: 30rpx 20rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 22rpx;
  color: #7f8c8d;
  line-height: 1.6;
  padding: 0 20rpx;
}

/* 警告卡片 */
.warning-card {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(238, 90, 111, 0.1) 100%);
  border: 1rpx solid rgba(255, 107, 107, 0.3);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.warning-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.warning-text {
  flex: 1;
  font-size: 24rpx;
  color: #ee5a6f;
  line-height: 1.6;
}

/* 计算器表单 */
.calculator-form {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-picker {
  width: 100%;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8faff;
  border: 2rpx solid #e8f0ff;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 出生日期输入 */
.birth-date-inputs {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.form-input-short {
  flex: 1;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8faff;
  border: 2rpx solid #e8f0ff;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}

.input-separator {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

.input-tips {
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(53, 122, 189, 0.1) 100%);
  border-radius: 12rpx;
}

.tips-text {
  font-size: 22rpx;
  color: #4A90E2;
  line-height: 1.5;
}

/* 计算按钮 */
.calculate-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.3);
  margin-top: 10rpx;
}

.calculate-button::after {
  border: none;
}

.calculate-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

/* 计算结果 */
.result-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.result-header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 24rpx 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.result-content {
  padding: 30rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.result-value.big {
  font-size: 38rpx;
  font-weight: bold;
  color: #4A90E2;
}

.result-value.delay {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.result-value.date {
  font-size: 30rpx;
  color: #27ae60;
  font-weight: 500;
}

.result-item.highlight {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(53, 122, 189, 0.1) 100%);
  border-radius: 12rpx;
  margin: 8rpx 0;
}

.result-divider {
  height: 1rpx;
  background: #e8ecef;
  margin: 16rpx 0;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.info-header {
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.policy-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.policy-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 4rpx;
}

.policy-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

.policy-text.highlight {
  color: #ff6b6b;
  font-weight: 500;
}

.info-divider {
  height: 1rpx;
  background: #e8ecef;
  margin: 8rpx 0;
}

/* 通知卡片 */
.notice-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.notice-header {
  margin-bottom: 20rpx;
}

.notice-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

/* 弹性退休卡片 */
.flex-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.flex-header {
  margin-bottom: 20rpx;
}

.flex-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.flex-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.flex-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

.flex-text.highlight {
  color: #ff6b6b;
  font-weight: 500;
}

/* 法律依据卡片 */
.law-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.law-header {
  margin-bottom: 20rpx;
}

.law-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.law-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.law-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}

.law-divider {
  height: 1rpx;
  background: #e8ecef;
  margin: 8rpx 0;
}

/* 免责声明 */
.disclaimer {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(238, 90, 111, 0.1) 100%);
  border-radius: 12rpx;
  border: 1rpx solid #ff6b6b;
  margin-bottom: 30rpx;
}

.disclaimer-text {
  font-size: 22rpx;
  color: #ee5a6f;
  line-height: 1.6;
}

/* 版权信息 */
.copyright-footer {
  text-align: center;
  padding: 30rpx 20rpx;
}

.copyright-text {
  font-size: 20rpx;
  color: #bdc3c7;
}
