/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
}

/* 顶部导航 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.nav-icon {
  font-size: 28rpx;
}

.nav-text {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

/* 聊天区域 */
.chat-area {
  flex: 1;
  padding: 30rpx 20rpx;
  overflow-y: auto;
  padding-bottom: 30rpx;
}

/* 消息行 */
.message-row {
  display: flex;
  margin-bottom: 40rpx;
  align-items: flex-start;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-row {
  flex-direction: row-reverse;
}

.assistant-row {
  flex-direction: row;
}

/* 头像 */
.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-avatar {
  margin-left: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.assistant-avatar {
  margin-right: 20rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
}

/* 消息气泡 - 美化版 */
.message-content {
  max-width: 75%;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  position: relative;
  word-wrap: break-word;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.user-message {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-top-right-radius: 6rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.25);
}

.assistant-message {
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  color: #2c3e50;
  border-top-left-radius: 6rpx;
  border: 1.5rpx solid #e8ecef;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.welcome-message {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  box-shadow: 0 6rpx 24rpx rgba(74, 144, 226, 0.35);
  border-radius: 24rpx;
  padding: 32rpx 36rpx;
}

.message-text {
  font-size: 30rpx;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 加载动画 */
.loading {
  padding: 30rpx 40rpx;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #4A90E2;
  border-radius: 50%;
  animation: typing 1.4s infinite;
}

.dot:nth-child(1) {
  animation-delay: 0s;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    opacity: 0.3;
    transform: translateY(0);
  }
  30% {
    opacity: 1;
    transform: translateY(-10rpx);
  }
}

/* 光标闪烁动画 */
.cursor {
  display: inline-block;
  animation: blink 1s infinite;
  font-weight: bold;
  color: #4A90E2;
}

@keyframes blink {
  0%, 50% {
    opacity: 1;
  }
  51%, 100% {
    opacity: 0;
  }
}

/* 输入区域 */
.input-area {
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 1) 100%);
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #e8f0ff;
  box-shadow: 0 -4rpx 20rpx rgba(74, 144, 226, 0.1);
  backdrop-filter: blur(10rpx);
}

/* 输入框区域 */
.input-box {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
}

/* 输入框 - 占据主要空间 */
.input-field {
  flex: 1;
  width: auto !important;
  min-height: 88rpx;
  max-height: 300rpx;
  padding: 20rpx 24rpx;
  background-color: #f8faff;
  border-radius: 20rpx;
  border: 2rpx solid #e8f0ff;
  font-size: 30rpx;
  line-height: 1.6;
  transition: all 0.3s;
  box-sizing: border-box;
}

.input-field:focus {
  background-color: white;
  border-color: #4A90E2;
  box-shadow: 0 0 0 4rpx rgba(74, 144, 226, 0.1);
}

.input-placeholder {
  color: #a0a0a0;
}

/* 发送按钮 - 紧凑 */
.send-button {
  width: 90rpx !important;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  margin: 0;
  background: linear-gradient(135deg, #e8e8e8 0%, #d0d0d0 100%);
  color: #999;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 20rpx;
  border: none;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  display: inline-block;
  text-align: center;
}

.send-button::after {
  border: none;
}

.send-button.active {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
  transform: translateY(-2rpx);
}

.send-button.active:active {
  transform: translateY(0);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.send-button[disabled] {
  opacity: 0.6;
  transform: none;
}

/* 消息内容包装器（用于放置复制按钮） */
.message-content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 75%;
}

.user-row .message-content-wrapper {
  align-items: flex-end;
}

/* 复制按钮 */
.copy-button {
  margin-top: 12rpx;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(53, 122, 189, 0.1) 100%);
  border: 1rpx solid #4A90E2;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  cursor: pointer;
}

.copy-button:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.2) 0%, rgba(53, 122, 189, 0.2) 100%);
}

.copy-icon {
  font-size: 24rpx;
}

.user-row .copy-button {
  align-self: flex-end;
}

.assistant-row .copy-button {
  align-self: flex-start;
}

/* 版权信息 */
.copyright-footer {
  margin-top: 16rpx;
  padding: 10rpx 20rpx;
  text-align: center;
}

.copyright-text {
  font-size: 20rpx;
  color: #bdc3c7;
}
