/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #f0f2f5 100%);
}

/* 顶部导航 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.nav-back {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #4A90E2;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
  color: #4A90E2;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.nav-right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.nav-icon {
  font-size: 28rpx;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  overflow-y: auto;
}

/* 律师头部信息 */
.lawyer-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

.lawyer-header::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-top: 20rpx solid #764ba2;
}

.lawyer-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 24rpx;
}

.lawyer-name {
  font-size: 44rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.lawyer-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  text-align: center;
}

.lawyer-tag {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

/* 区块样式 */
.section {
  background: white;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 36rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

/* 律师简介 */
.lawyer-intro {
  background: linear-gradient(135deg, #fff9e6 0%, #fff 100%);
}

.intro-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.intro-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #555;
  text-align: justify;
}

.intro-motto {
  font-weight: bold;
  color: #4A90E2;
  padding: 16rpx;
  background: rgba(74, 144, 226, 0.1);
  border-left: 4rpx solid #4A90E2;
  border-radius: 8rpx;
}

/* 专业领域 */
.expertise-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.expertise-item {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #fff 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.expertise-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #4A90E2;
  min-width: 60rpx;
  text-align: center;
}

.expertise-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.expertise-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.expertise-desc {
  font-size: 26rpx;
  line-height: 1.6;
  color: #666;
}

/* 办案理念 */
.philosophy-section {
  background: linear-gradient(135deg, #f0f9ff 0%, #fff 100%);
}

.philosophy-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.philosophy-quote {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 24rpx;
  background: white;
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.1);
}

.quote-cn {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
  text-align: center;
}

.quote-en {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  font-style: italic;
}

.philosophy-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #555;
  text-align: justify;
}

/* 办公地址 */
.address-section {
  background: linear-gradient(135deg, #fff9e6 0%, #fff 100%);
}

.address-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.address-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  text-align: center;
}

.contact-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.contact-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.contact-button::after {
  border: none;
}

.contact-button.secondary {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  box-shadow: 0 4rpx 12rpx rgba(67, 233, 123, 0.3);
}

.button-icon {
  font-size: 32rpx;
}

.button-text {
  font-size: 26rpx;
  font-weight: bold;
}

/* 咨询收费 */
.consultation-fee {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  background: linear-gradient(135deg, #fff9e6 0%, #fff 100%);
  border-radius: 12rpx;
  border: 2rpx solid #f0e6c8;
}

.fee-label {
  font-size: 26rpx;
  color: #666;
}

.fee-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
}

/* AI助手提示 */
.ai-tip {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #fff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e8f0ff;
  transition: all 0.3s;
}

.ai-tip:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.tip-icon {
  font-size: 48rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
}

.tip-desc {
  font-size: 24rpx;
  color: #999;
}

/* 版权信息 */
.copyright-footer {
  padding: 30rpx 20rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  background: white;
  border-top: 1rpx solid #e8ecef;
  text-align: center;
}

.copyright-text {
  font-size: 20rpx;
  color: #bdc3c7;
}
