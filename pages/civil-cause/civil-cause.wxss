/* pages/civil-cause/civil-cause.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 标题区域 */
.header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.nav-back {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  padding: 10rpx 15rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 12rpx;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 4rpx 15rpx rgba(252, 182, 159, 0.4);
}

.back-icon {
  font-size: 40rpx;
  margin-right: 5rpx;
}

.back-text {
  font-size: 26rpx;
  font-weight: 500;
}

.nav-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #1a3a5c;
  text-align: center;
  margin-right: 140rpx;
}

/* 提示卡片 */
.tips-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #ff9800;
}

.tips-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 10rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
}

/* 搜索区域 */
.search-section {
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-icon {
  font-size: 36rpx;
  color: #ff9800;
}

/* Tab容器 */
.tab-container {
  margin-bottom: 20rpx;
}

.tab-scroll {
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 15rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-color: #ff9800;
  box-shadow: 0 4rpx 15rpx rgba(255, 152, 0, 0.4);
}

.tab-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #fff;
  font-weight: bold;
}

/* 案由列表 */
.cause-list {
  margin-bottom: 20rpx;
}

.cause-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #ff9800;
  transition: all 0.3s;
}

.cause-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.cause-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.cause-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  color: #1a3a5c;
}

.cause-code {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: bold;
  padding: 5rpx 15rpx;
  background: #fff8e1;
  border-radius: 20rpx;
}

.cause-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
}

.cause-children {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10rpx;
  border-top: 1rpx solid #f0f0f0;
}

.children-tag {
  font-size: 24rpx;
  color: #ff9800;
}

.expand-icon {
  font-size: 36rpx;
  color: #ff9800;
  transform: rotate(90deg);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #bbb;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-content {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.modal-close {
  font-size: 40rpx;
  color: #fff;
  padding: 0 10rpx;
}

.modal-body {
  padding: 25rpx;
  overflow-y: auto;
  flex: 1;
}

.detail-item {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-label {
  display: block;
  font-size: 26rpx;
  color: #ff9800;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.detail-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}

.detail-section {
  margin-bottom: 25rpx;
}

.detail-subtitle {
  display: block;
  font-size: 28rpx;
  color: #ff9800;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.detail-text {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
}

/* 子案由列表 */
.children-list {
  margin-top: 10rpx;
}

.child-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.child-name {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.child-code {
  font-size: 22rpx;
  color: #ff9800;
  padding: 5rpx 12rpx;
  background: #fff8e1;
  border-radius: 15rpx;
}

/* 筛选区域 */
.filter-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.filter-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a3a5c;
  margin-bottom: 15rpx;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-tag {
  padding: 12rpx 25rpx;
  background: #f5f5f5;
  border-radius: 50rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.filter-tag.active {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-color: #ff9800;
  box-shadow: 0 4rpx 15rpx rgba(255, 152, 0, 0.4);
}

.filter-tag text {
  font-size: 24rpx;
  color: #333;
}

.filter-tag.active text {
  color: #fff;
  font-weight: bold;
}

/* 统计卡片 */
.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.stats-text {
  font-size: 26rpx;
  color: #555;
}

/* 免责声明 */
.disclaimer {
  background: rgba(255, 248, 240, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #ff9800;
}

.disclaimer-text {
  display: block;
  font-size: 24rpx;
  color: #e65100;
  line-height: 1.8;
}
