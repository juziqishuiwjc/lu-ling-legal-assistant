/* pages/legal-data/legal-data.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  padding: 30rpx 20rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 筛选器 */
.filter-section {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.filter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.filter-picker {
  flex: 1;
  margin-left: 20rpx;
}

.picker-view {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: #f8faff;
  border: 2rpx solid #e8f0ff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #4A90E2;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 数据卡片 */
.data-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.data-header {
  margin-bottom: 20rpx;
}

.data-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.data-content {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.data-item:last-child {
  border-bottom: none;
}

.data-label {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  padding-right: 20rpx;
}

.data-value {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: bold;
}

/* 用途卡片 */
.usage-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.usage-header {
  margin-bottom: 20rpx;
}

.usage-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.usage-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.usage-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  padding-left: 20rpx;
  position: relative;
}

.usage-text::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 6rpx;
  height: 6rpx;
  background: #4A90E2;
  border-radius: 50%;
}

/* 免责声明 */
.disclaimer {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(238, 90, 111, 0.1) 100%);
  border-radius: 12rpx;
  border: 1rpx solid #ff6b6b;
}

.disclaimer-text {
  font-size: 22rpx;
  color: #ee5a6f;
  line-height: 1.6;
  text-align: center;
}
