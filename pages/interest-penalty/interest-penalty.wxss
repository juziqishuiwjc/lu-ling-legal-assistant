/* pages/interest-penalty/interest-penalty.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  padding: 30rpx 20rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* Tab切换 */
.tab-container {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
}

.tab-text {
  font-size: 26rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: white;
  font-weight: bold;
}

/* Tab内容 */
.tab-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 计算器表单 */
.calculator-form {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8faff;
  border: 2rpx solid #e8f0ff;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.form-input:focus {
  background: white;
  border-color: #4A90E2;
  box-shadow: 0 0 0 4rpx rgba(74, 144, 226, 0.1);
}

.input-tips {
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(53, 122, 189, 0.1) 100%);
  border-radius: 12rpx;
}

.tips-text {
  font-size: 22rpx;
  color: #4A90E2;
  line-height: 1.5;
}

/* 计算按钮 */
.calculate-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.3);
  margin-top: 10rpx;
}

.calculate-button::after {
  border: none;
}

.calculate-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

/* 计算结果 */
.result-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.result-header {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 24rpx 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.result-content {
  padding: 30rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
}

.result-divider {
  height: 1rpx;
  background: #e8ecef;
  margin: 16rpx 0;
}

.result-highlight {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(240, 147, 251, 0.1) 0%, rgba(245, 87, 108, 0.1) 100%);
  border-radius: 12rpx;
  margin: 8rpx 0;
}

.result-amount {
  font-size: 38rpx;
  font-weight: bold;
  color: #f5576c;
}

/* 法律依据卡片 */
.law-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.law-header {
  margin-bottom: 20rpx;
}

.law-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.law-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.law-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.law-divider {
  height: 1rpx;
  background: #e8ecef;
  margin: 8rpx 0;
}

/* 免责声明 */
.disclaimer {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(238, 90, 111, 0.1) 100%);
  border-radius: 12rpx;
  border: 1rpx solid #ff6b6b;
}

.disclaimer-text {
  font-size: 22rpx;
  color: #ee5a6f;
  line-height: 1.6;
  text-align: center;
}
