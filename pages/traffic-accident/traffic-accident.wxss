/* pages/traffic-accident/traffic-accident.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 标题区域 */
.header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.nav-back {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  padding: 10rpx 15rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.back-icon {
  font-size: 40rpx;
  margin-right: 5rpx;
}

.back-text {
  font-size: 26rpx;
  font-weight: 500;
}

.nav-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #1a3a5c;
  text-align: center;
  margin-right: 140rpx;
}

/* 提示卡片 */
.tips-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #667eea;
}

.tips-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
}

/* 表单区域 */
.form-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a3a5c;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

/* 案件类型选择 */
.type-selector {
  display: flex;
  justify-content: space-between;
  gap: 15rpx;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 24rpx;
  color: #333;
}

.type-item.active .type-name {
  color: #fff;
  font-weight: bold;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  background: #fff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
}

.picker-arrow {
  font-size: 40rpx;
  color: #999;
  transform: rotate(90deg);
}

.form-hint {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 按钮组 */
.btn-group {
  display: flex;
  gap: 20rpx;
  margin: 30rpx 0;
}

.btn-primary, .btn-secondary {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  background: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

/* 结果卡片 */
.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  margin-bottom: 25rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a3a5c;
}

.result-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.result-label {
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}

.result-value {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

.result-divider {
  height: 2rpx;
  background: #e0e0e0;
  margin: 20rpx 0;
}

.result-details {
  margin-top: 20rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-name {
  font-size: 28rpx;
  color: #555;
}

.detail-value {
  font-size: 28rpx;
  color: #1a3a5c;
  font-weight: bold;
}

.result-formula {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.formula-title {
  display: block;
  font-size: 26rpx;
  color: #667eea;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.formula-text {
  display: block;
  font-size: 24rpx;
  color: #555;
  line-height: 1.8;
}

/* 法律依据 */
.legal-basis {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #667eea;
}

.legal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 15rpx;
}

.legal-text {
  display: block;
  font-size: 26rpx;
  color: #555;
  line-height: 2;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}

/* 免责声明 */
.disclaimer {
  background: rgba(255, 248, 240, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #ff9800;
}

.disclaimer-text {
  display: block;
  font-size: 24rpx;
  color: #e65100;
  line-height: 1.8;
}
