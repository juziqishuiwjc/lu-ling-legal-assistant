/* pages/small-claim/small-claim.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  padding: 30rpx 20rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 筛选器 */
.filter-section {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.filter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.filter-picker {
  flex: 1;
  margin-left: 20rpx;
}

.picker-view {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: #f8faff;
  border: 2rpx solid #e8f0ff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #4A90E2;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 当前标准卡片 */
.current-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.current-header {
  margin-bottom: 20rpx;
}

.current-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.current-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.amount-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(53, 122, 189, 0.1) 100%);
  border-radius: 16rpx;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
}

.amount-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
}

.update-info {
  padding: 12rpx 16rpx;
  background: #fafbfc;
  border-radius: 12rpx;
  text-align: center;
}

.update-text {
  font-size: 24rpx;
  color: #999;
}

/* 法律依据卡片 */
.law-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.law-header {
  margin-bottom: 20rpx;
}

.law-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.law-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.law-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.law-divider {
  height: 1rpx;
  background: #e8ecef;
  margin: 8rpx 0;
}

/* 特点卡片 */
.features-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.features-header {
  margin-bottom: 20rpx;
}

.features-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.features-content {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.feature-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.feature-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.feature-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
}

/* 地区列表 */
.list-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.list-header {
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.province-list {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.province-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.province-item:last-child {
  border-bottom: none;
}

.province-left {
  flex: 1;
}

.province-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.province-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.province-limit {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: bold;
}

.province-date {
  font-size: 20rpx;
  color: #999;
}

/* 免责声明 */
.disclaimer {
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(238, 90, 111, 0.1) 100%);
  border-radius: 12rpx;
  border: 1rpx solid #ff6b6b;
}

.disclaimer-text {
  font-size: 22rpx;
  color: #ee5a6f;
  line-height: 1.6;
  text-align: center;
}
