/* pages/ai-chat/ai-chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

/* 聊天头部 */
.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.header-info {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 6rpx;
}

.header-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.header-actions {
  display: flex;
  align-items: center;
}

.clear-btn {
  padding: 10rpx 24rpx;
  font-size: 26rpx;
  color: white;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-message {
  justify-content: flex-end;
}

.assistant-message {
  justify-content: flex-start;
}

.message-content {
  max-width: 75%;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.user-message .message-content {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-bottom-right-radius: 6rpx;
}

.assistant-message .message-content {
  background: white;
  color: #333;
  border-bottom-left-radius: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
}

.loading-dots {
  display: flex;
  margin-left: 8rpx;
}

.loading-dots .dot {
  font-size: 32rpx;
  color: #999;
  animation: dotBounce 1.4s infinite;
}

.loading-dots .dot:nth-child(1) {
  animation-delay: 0s;
}

.loading-dots .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dots .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dotBounce {
  0%, 80%, 100% {
    opacity: 0.3;
  }
  40% {
    opacity: 1;
  }
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: flex-end;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #e8ecef;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.input-box {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  border: none;
}

.send-btn {
  margin-left: 20rpx;
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  font-size: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  border: none;
}

.send-btn[disabled] {
  opacity: 0.5;
}

.send-btn::after {
  border: none;
}

/* 免责声明 */
.disclaimer {
  position: absolute;
  bottom: calc(140rpx + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
  padding: 12rpx;
  text-align: center;
  font-size: 22rpx;
  color: #999;
  background: rgba(255, 248, 225, 0.95);
  pointer-events: none;
}
