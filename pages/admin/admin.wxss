/* pages/admin/admin.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  padding: 40rpx 30rpx;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 30rpx;
}

/* 输入框组 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #2c3e50;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #4A90E2;
  background: white;
}

/* 套餐选择器 */
.plan-selector {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.plan-option {
  flex: 1;
  min-width: 180rpx;
  padding: 24rpx 16rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s;
}

.plan-option.active {
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(53, 122, 189, 0.1) 100%);
  border-color: #4A90E2;
}

.plan-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.plan-price {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
}

.plan-option.active .plan-name {
  color: #4A90E2;
}

.plan-option.active .plan-price {
  color: #4A90E2;
}

/* 激活按钮 */
.activate-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.activate-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.activate-button[disabled] {
  background: #bdc3c7;
  box-shadow: none;
}

/* 搜索框 */
.search-box {
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 用户列表 */
.user-list {
  max-height: 600rpx;
}

.user-item {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}

.user-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.tap-hint {
  margin-top: 12rpx;
  text-align: center;
}

.hint-text {
  font-size: 22rpx;
  color: #bdc3c7;
}

.user-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-phone {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
}

.user-plan {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.user-plan.monthly {
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(53, 122, 189, 0.1) 100%);
  border: 1rpx solid #4A90E2;
}

.user-plan.monthly .plan-text {
  color: #4A90E2;
}

.user-plan.yearly {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border: 1rpx solid #667eea;
}

.user-plan.yearly .plan-text {
  color: #667eea;
}

.user-plan.trial {
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 152, 0, 0.1) 100%);
  border: 1rpx solid #FFC107;
}

.user-plan.trial .plan-text {
  color: #FFC107;
}

.meta-text.expired {
  color: #e74c3c;
  font-weight: bold;
}

.user-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
}

.stats-card .card-title {
  color: white;
}

.stat-row {
  display: flex;
  gap: 20rpx;
}

.stat-box {
  flex: 1;
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 导航链接 */
.nav-links {
  margin-top: 40rpx;
}

.nav-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: white;
  color: #4A90E2;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border: 2rpx solid #4A90E2;
}

.nav-button:active {
  background: #f8f9fa;
}

/* 版权信息 */
.copyright-footer {
  margin-top: 40rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.05) 0%, rgba(53, 122, 189, 0.05) 100%);
  border-radius: 16rpx;
}

.copyright-footer .copyright-text {
  display: block;
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: bold;
}
