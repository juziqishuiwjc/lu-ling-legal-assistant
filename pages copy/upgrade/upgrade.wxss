/* pages/upgrade/upgrade.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.2);
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 温馨提示卡片 */
.notice-card {
  background: linear-gradient(135deg, #fff9e6 0%, #fff3d6 100%);
  border: 2rpx solid #ffd966;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
}

.notice-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #e67e22;
  margin-bottom: 12rpx;
}

.notice-text {
  display: block;
  font-size: 26rpx;
  color: #d35400;
  line-height: 1.6;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.card-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ecf0f1;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.card-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
}

.card-body {
  margin-bottom: 30rpx;
}

.feature {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.feature.disabled {
  opacity: 0.5;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  margin-right: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.feature:not(.disabled) .feature-icon {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
}

.feature.disabled .feature-icon {
  background: #ecf0f1;
  color: #bdc3c7;
}

.feature-text {
  font-size: 28rpx;
  color: #34495e;
}

.card-subtitle {
  font-size: 24rpx;
  color: #e74c3c;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 联系卡片 */
.contact-card {
  background: linear-gradient(135deg, #f8faff 0%, #e8f0ff 100%);
  border: 2rpx solid #d0dfff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.contact-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 24rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e8f0ff;
}

.contact-label {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-right: 16rpx;
}

.contact-value {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
}

.copy-hint {
  font-size: 24rpx;
  color: #999;
}

.contact-note {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.contact-step {
  display: block;
  font-size: 26rpx;
  color: #34495e;
  line-height: 1.8;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}

/* 按钮样式 */
.pay-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.pay-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.pay-button.secondary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 说明文字 */
.notes {
  margin-top: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16rpx;
}

.note-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.note-text {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 2;
  margin-bottom: 8rpx;
}

/* 特殊卡片样式 */
.paid-card {
  border: 2rpx solid #4A90E2;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.15);
}

.yearly-card {
  border: 2rpx solid #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
}
