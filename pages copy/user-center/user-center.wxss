/* pages/user-center/user-center.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  padding: 40rpx 30rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
}

.avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
}

.user-card .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: white;
}

.avatar-edit-hint {
  position: absolute;
  bottom: -5rpx;
  right: -5rpx;
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.edit-icon {
  font-size: 24rpx;
}

.user-info {
  flex: 1;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-badge.paid {
  background: rgba(255, 255, 255, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.status-badge.paid .status-text {
  color: white;
  font-weight: bold;
}

.status-badge.free {
  background: rgba(255, 255, 255, 0.2);
}

.status-badge.free .status-text {
  color: rgba(255, 255, 255, 0.9);
}

/* 会员信息卡片 */
.member-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.member-card .card-title {
  color: white;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}

.member-info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.member-info-item:last-child {
  border-bottom: none;
}

.member-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.member-value {
  font-size: 30rpx;
  font-weight: bold;
  color: white;
}

.member-value.remaining-days {
  color: #FFD700;
}

/* 通用卡片样式 */
.quick-actions-card,
.stats-card,
.benefits-card,
.settings-card,
.contact-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 30rpx;
}

/* 统计项 */
.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #ecf0f1;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 28rpx;
  color: #7f8c8d;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
}

/* 权益列表 */
.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.benefit-icon {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.benefit-text {
  font-size: 28rpx;
  color: #34495e;
}

.upgrade-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border: none;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.upgrade-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

/* 快捷操作项 */
.quick-action-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.quick-action-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.action-content {
  flex: 1;
}

.action-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
}

.action-arrow {
  font-size: 36rpx;
  color: #bdc3c7;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.setting-label {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
}

.setting-value {
  font-size: 28rpx;
  color: #4A90E2;
  margin-right: 16rpx;
}

.setting-arrow {
  font-size: 36rpx;
  color: #bdc3c7;
}

.setting-note {
  display: block;
  font-size: 24rpx;
  color: #95a5a6;
  line-height: 1.6;
}

/* 联系卡片 */
.contact-row {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8faff;
  border-radius: 16rpx;
  border: 1rpx solid #e8f0ff;
}

.contact-label {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-right: 16rpx;
}

.contact-value {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
}

.copy-hint {
  font-size: 24rpx;
  color: #999;
}

/* 隐藏的管理员入口 */
.footer-info {
  text-align: center;
  padding: 40rpx 0 20rpx;
  margin-top: 20rpx;
}

.version-text {
  font-size: 22rpx;
  color: #ccc;
  opacity: 0.5;
}
